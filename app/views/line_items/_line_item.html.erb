<tr>
    <td class="text-right"><%= line_item.quantity %></td>
    <td>&times;</td>
    <td class="pr-2">
        <%= line_item.product.title %>
    </td>
    <td class="text-right font-bold">
        <%= number_to_currency(line_item.total_price) %>
    </td>
    <td>
         <%= button_to 'Remove', line_item, method: :delete, data: {
        turbo_confirm: "are you sure you want to remove product"
        },
        class: 'ml-4 rounded-lg py-1 px-2 text-xs text-white bg-red-600' %>
    </td>

</tr>



